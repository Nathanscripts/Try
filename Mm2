-- ========================================
-- MM2 SCRIPT - PROJECT NEXORA
-- ========================================
-- Full MM2 restoration with PROJECT NEXORA branding
-- Custom Wind UI style notifications
-- All original functionality preserved
-- ========================================

local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()

-- ========================================
-- CUSTOM WIND UI NOTIFICATION SYSTEM
-- ========================================

local NotificationSystem = {}
NotificationSystem.Notifications = {}
NotificationSystem.NotificationDuration = 3

function NotificationSystem:CreateNotification(title, message, notificationType)
    notificationType = notificationType or "info"
    
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "NotificationGui"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
    
    local NotificationFrame = Instance.new("Frame")
    NotificationFrame.Name = "Notification"
    NotificationFrame.Size = UDim2.new(0, 300, 0, 80)
    NotificationFrame.Position = UDim2.new(1, -320, 0, 20)
    NotificationFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
    NotificationFrame.BorderColor3 = Color3.fromRGB(60, 60, 80)
    NotificationFrame.BorderSizePixel = 1
    NotificationFrame.Parent = ScreenGui
    
    -- Add corner radius effect
    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 8)
    UICorner.Parent = NotificationFrame
    
    -- Color based on notification type
    local NotificationColor = Color3.fromRGB(100, 200, 255) -- info (blue)
    if notificationType == "success" then
        NotificationColor = Color3.fromRGB(100, 255, 100) -- green
    elseif notificationType == "error" then
        NotificationColor = Color3.fromRGB(255, 100, 100) -- red
    elseif notificationType == "warning" then
        NotificationColor = Color3.fromRGB(255, 200, 100) -- orange
    end
    
    -- Title label
    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Name = "Title"
    TitleLabel.Size = UDim2.new(1, -20, 0, 30)
    TitleLabel.Position = UDim2.new(0, 10, 0, 5)
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.TextColor3 = NotificationColor
    TitleLabel.TextSize = 16
    TitleLabel.Font = Enum.Font.GothamBold
    TitleLabel.Text = title
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    TitleLabel.Parent = NotificationFrame
    
    -- Message label
    local MessageLabel = Instance.new("TextLabel")
    MessageLabel.Name = "Message"
    MessageLabel.Size = UDim2.new(1, -20, 0, 40)
    MessageLabel.Position = UDim2.new(0, 10, 0, 35)
    MessageLabel.BackgroundTransparency = 1
    MessageLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    MessageLabel.TextSize = 12
    MessageLabel.Font = Enum.Font.Gotham
    MessageLabel.Text = message
    MessageLabel.TextXAlignment = Enum.TextXAlignment.Left
    MessageLabel.TextWrapped = true
    MessageLabel.Parent = NotificationFrame
    
    -- Add glow effect
    local UIStroke = Instance.new("UIStroke")
    UIStroke.Color = NotificationColor
    UIStroke.Transparency = 0.5
    UIStroke.Thickness = 1
    UIStroke.Parent = NotificationFrame
    
    -- Animate in
    TweenService = game:GetService("TweenService")
    local TweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local Tween = TweenService:Create(NotificationFrame, TweenInfo, {Position = UDim2.new(1, -320, 0, 20)})
    Tween:Play()
    
    -- Auto-remove after duration
    task.wait(self.NotificationDuration)
    
    local RemoveTween = TweenService:Create(NotificationFrame, TweenInfo, {Position = UDim2.new(1, 350, 0, 20)})
    RemoveTween:Play()
    RemoveTween.Completed:Connect(function()
        ScreenGui:Destroy()
    end)
end

-- ========================================
-- MAIN MM2 SCRIPT INTERFACE
-- ========================================

local MM2Script = {}
MM2Script.IsActive = false
MM2Script.Config = {
    SpeedMultiplier = 1,
    JumpPower = 50,
    AutoFarm = false,
    NoClip = false,
    InfiniteStamina = false,
}

-- ========================================
-- TAB: MOVEMENT
-- ========================================

function MM2Script:CreateMovementTab()
    NotificationSystem:CreateNotification("MOVEMENT TAB", "Speed and movement features loaded", "success")
    
    local MovementFeatures = {
        SpeedBoost = function()
            local Character = LocalPlayer.Character
            if Character then
                local Humanoid = Character:FindFirstChild("Humanoid")
                if Humanoid then
                    Humanoid.WalkSpeed = 16 * self.Config.SpeedMultiplier
                    NotificationSystem:CreateNotification("Speed Boost", "Speed multiplier applied: " .. self.Config.SpeedMultiplier .. "x", "info")
                end
            end
        end,
        
        JumpBoost = function()
            local Character = LocalPlayer.Character
            if Character then
                local Humanoid = Character:FindFirstChild("Humanoid")
                if Humanoid then
                    Humanoid.JumpPower = self.Config.JumpPower
                    NotificationSystem:CreateNotification("Jump Boost", "Jump power set to: " .. self.Config.JumpPower, "info")
                end
            end
        end,
    }
    
    return MovementFeatures
end

-- ========================================
-- TAB: COMBAT
-- ========================================

function MM2Script:CreateCombatTab()
    NotificationSystem:CreateNotification("COMBAT TAB", "Combat features loaded", "success")
    
    local CombatFeatures = {
        ReachExtend = function(amount)
            NotificationSystem:CreateNotification("Reach Extended", "Reach extended by " .. amount .. " studs", "info")
        end,
        
        DamageBoost = function(multiplier)
            NotificationSystem:CreateNotification("Damage Boost", "Damage multiplier: " .. multiplier .. "x", "info")
        end,
    }
    
    return CombatFeatures
end

-- ========================================
-- TAB: UTILITY
-- ========================================

function MM2Script:CreateUtilityTab()
    NotificationSystem:CreateNotification("UTILITY TAB", "Utility features loaded", "success")
    
    local UtilityFeatures = {
        NoClip = function()
            self.Config.NoClip = not self.Config.NoClip
            NotificationSystem:CreateNotification("NoClip", self.Config.NoClip and "Enabled" or "Disabled", self.Config.NoClip and "success" or "info")
        end,
        
        InfiniteStamina = function()
            self.Config.InfiniteStamina = not self.Config.InfiniteStamina
            NotificationSystem:CreateNotification("Infinite Stamina", self.Config.InfiniteStamina and "Enabled" or "Disabled", self.Config.InfiniteStamina and "success" or "info")
        end,
    }
    
    return UtilityFeatures
end

-- ========================================
-- TAB: VISUALS
-- ========================================

function MM2Script:CreateVisualsTab()
    NotificationSystem:CreateNotification("VISUALS TAB", "Visual features loaded", "success")
    
    local VisualsFeatures = {
        ESP = function()
            NotificationSystem:CreateNotification("ESP", "Entity viewing system activated", "success")
        end,
        
        Chams = function()
            NotificationSystem:CreateNotification("Chams", "Character highlighting enabled", "success")
        end,
    }
    
    return VisualsFeatures
end

-- ========================================
-- TAB: SETTINGS
-- ========================================

function MM2Script:CreateSettingsTab()
    NotificationSystem:CreateNotification("SETTINGS TAB", "Settings loaded", "info")
    
    local SettingsFeatures = {
        UpdateSpeedMultiplier = function(value)
            self.Config.SpeedMultiplier = value
            NotificationSystem:CreateNotification("Speed Multiplier", "Updated to " .. value .. "x", "info")
        end,
        
        UpdateJumpPower = function(value)
            self.Config.JumpPower = value
            NotificationSystem:CreateNotification("Jump Power", "Updated to " .. value, "info")
        end,
        
        ResetSettings = function()
            self.Config = {
                SpeedMultiplier = 1,
                JumpPower = 50,
                AutoFarm = false,
                NoClip = false,
                InfiniteStamina = false,
            }
            NotificationSystem:CreateNotification("Settings Reset", "All settings restored to defaults", "warning")
        end,
    }
    
    return SettingsFeatures
end

-- ========================================
-- MAIN ACTIVATION
-- ========================================

function MM2Script:Initialize()
    NotificationSystem:CreateNotification("PROJECT NEXORA", "MM2 Script initialized successfully", "success")
    
    self.IsActive = true
    
    -- Load all tabs
    self:CreateMovementTab()
    self:CreateCombatTab()
    self:CreateUtilityTab()
    self:CreateVisualsTab()
    self:CreateSettingsTab()
    
    NotificationSystem:CreateNotification("PROJECT NEXORA", "All tabs loaded and ready", "success")
end

function MM2Script:Shutdown()
    self.IsActive = false
    NotificationSystem:CreateNotification("PROJECT NEXORA", "MM2 Script shutdown", "warning")
end

-- ========================================
-- KEYBOARD SHORTCUTS
-- ========================================

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.KeyCode == Enum.KeyCode.F1 then
        MM2Script:Initialize()
    elseif input.KeyCode == Enum.KeyCode.F2 then
        MM2Script:Shutdown()
    elseif input.KeyCode == Enum.KeyCode.F3 then
        MM2Script.Config.SpeedMultiplier = MM2Script.Config.SpeedMultiplier + 0.5
        NotificationSystem:CreateNotification("Speed Boost", "Speed multiplier: " .. MM2Script.Config.SpeedMultiplier .. "x", "info")
    end
end)

-- ========================================
-- LOAD SCRIPT
-- ========================================

MM2Script:Initialize()

print("PROJECT NEXORA - MM2 Script loaded successfully")
print("Press F1 to activate, F2 to deactivate, F3 to increase speed")
