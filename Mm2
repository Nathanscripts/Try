-- PROJECT NEXORA | MM2
-- Custom Notification System with Wind UI Design Style

local ProjectNexora = {}
ProjectNexora.__index = ProjectNexora

-- Notification System
local NotificationSystem = {}
NotificationSystem.__index = NotificationSystem

function NotificationSystem.new()
    local self = setmetatable({}, NotificationSystem)
    self.notifications = {}
    self.activeNotifications = {}
    return self
end

function NotificationSystem:createNotification(title, message, notificationType, duration)
    -- notificationType: "success", "error", "warning", "info"
    local notification = {
        title = title,
        message = message,
        type = notificationType or "info",
        duration = duration or 5,
        createdAt = tick(),
        id = math.random(10000, 99999)
    }
    
    table.insert(self.notifications, notification)
    table.insert(self.activeNotifications, notification.id)
    
    self:displayNotification(notification)
    
    return notification.id
end

function NotificationSystem:displayNotification(notification)
    -- Wind UI Style Notification Display
    local colors = {
        success = Color3.fromRGB(34, 177, 76),
        error = Color3.fromRGB(231, 76, 60),
        warning = Color3.fromRGB(241, 196, 15),
        info = Color3.fromRGB(52, 152, 219)
    }
    
    local notifColor = colors[notification.type] or colors.info
    
    -- Create visual notification (adapt to your GUI framework)
    print(string.format("[%s] %s: %s", string.upper(notification.type), notification.title, notification.message))
    
    -- Schedule removal after duration
    task.delay(notification.duration, function()
        self:removeNotification(notification.id)
    end)
end

function NotificationSystem:removeNotification(notificationId)
    for i, id in ipairs(self.activeNotifications) do
        if id == notificationId then
            table.remove(self.activeNotifications, i)
            break
        end
    end
end

function NotificationSystem:clearAll()
    self.activeNotifications = {}
    self.notifications = {}
end

-- Main Project Nexora Module
function ProjectNexora.new()
    local self = setmetatable({}, ProjectNexora)
    self.notificationSystem = NotificationSystem.new()
    self.version = "1.0.0"
    self.projectName = "PROJECT NEXORA | MM2"
    return self
end

function ProjectNexora:notify(title, message, notificationType, duration)
    return self.notificationSystem:createNotification(title, message, notificationType, duration)
end

function ProjectNexora:initialize()
    self:notify("System", "PROJECT NEXORA | MM2 initialized successfully", "success", 4)
end

function ProjectNexora:shutdown()
    self:notify("System", "PROJECT NEXORA | MM2 shutting down", "info", 3)
    self.notificationSystem:clearAll()
end

return ProjectNexora
